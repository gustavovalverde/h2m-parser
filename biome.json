{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "recommended": true,
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "domains": {
      "project": "recommended",
      "test": "recommended"
    },
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessConstructor": "error"
      },
      "performance": {
        "noAccumulatingSpread": "error",
        "noAwaitInLoops": "error",
        "noDelete": "error",
        "noNamespaceImport": "warn",
        "noReExportAll": "warn",
        "noBarrelFile": "warn",
        "useTopLevelRegex": "warn"
      },
      "style": {
        "useBlockStatements": "error",
        "useImportType": "error",
        "useNodejsImportProtocol": "error",
        "noCommonJs": "warn"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noImplicitAnyLet": "error",
        "noEvolvingTypes": "warn"
      },
      "nursery": {
        "recommended": true,
        "noFloatingPromises": "error",
        "noMisusedPromises": "error",
        "noImportCycles": "warn",
        "useExhaustiveSwitchCases": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.test.*", "**/*.spec.*", "**/__tests__/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "warn"
          }
        }
      }
    },
    {
      "includes": ["bench/**"],
      "linter": {
        "rules": {
          "performance": {
            "noAwaitInLoops": "off",
            "useTopLevelRegex": "off",
            "noNamespaceImport": "off"
          }
        }
      }
    },
    {
      "includes": [
        "fixtures/**",
        "test-assets/**",
        "dist/**",
        "coverage/**",
        "bench/.baseline/**",
        "bench/.results/**",
        "bench/output/**"
      ],
      "linter": { "enabled": false },
      "formatter": { "enabled": false },
      "assist": { "enabled": false }
    }
  ]
}
